  "latex-workshop.latex.autoBuild.run": "onSave",

  // ---------- LaTeX Workshop ----------

  // ‰ΩøÁî®„Éë„ÉÉ„Ç±„Éº„Ç∏„ÅÆ„Ç≥„Éû„É≥„Éâ„ÇÑÁí∞Â¢É„ÅÆË£úÂÆå„ÇíÊúâÂäπ„Å´„Åô„Çã
  "latex-workshop.intellisense.package.enabled": true,

  // ÁîüÊàê„Éï„Ç°„Ç§„É´„ÇíÂâäÈô§„Åô„Çã„Å®„Åç„Å´ÂØæË±°„Å®„Åô„Çã„Éï„Ç°„Ç§„É´
  // „Éá„Éï„Ç©„É´„ÉàÂÄ§„Å´ "*.synctex.gz" „ÇíËøΩÂä†
  "latex-workshop.latex.clean.fileTypes": [
    "**/*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav",
    "*.dvi",
    "*.synctex.gz",
    "**/*.gz"
  ],

  // ÁîüÊàê„Éï„Ç°„Ç§„É´„Çí "out" „Éá„Ç£„É¨„ÇØ„Éà„É™„Å´Âêê„ÅçÂá∫„Åô
  "latex-workshop.latex.outDir": "",

  // „Éì„É´„Éâ„ÅÆ„É¨„Ç∑„Éî
  "latex-workshop.latex.recipes": [
    {
      "name": "ptex2pdf -> pdf",
      "tools": ["ptex2pdf", "ptex2pdf"]
    },
    {
      "name": "ptex2pdf -> bib -> pdf22",
      "tools": ["ptex2pdf", "pbibtex", "ptex2pdf", "ptex2pdf"]
    },
    {
      "name": "ptex2pdf -> ptex2pdf -> ptex2pdf*2",
      "tools": ["ptex2pdf", "makeindex", "pbibtex", "ptex2pdf", "ptex2pdf"]
    },
    {
      "name": "latexmk",
      "tools": ["latexmk", "makeindex", "latexmk"]
    }
  ],

  // „Éì„É´„Éâ„ÅÆ„É¨„Ç∑„Éî„Å´‰Ωø„Çè„Çå„Çã„Éë„Éº„ÉÑ
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": ["-silent", "-outdir=%OUTDIR%", "%DOC%"]
    },
    {
      "name": "makeindex",
      "command": "makeindex",
      "args": ["%DOCFILE%.nlo", "-s", "nomencl.ist", "-o", "%DOCFILE%.nls"]
    },
    {
      "name": "ptex2pdf",
      "command": "ptex2pdf",
      "args": ["-l", "-ot", "-kanji=utf8 -synctex=1", "-o", "%DOC%"]
    },
    {
      "name": "pbibtex",
      "command": "pbibtex",
      "args": ["-kanji=utf8", "%DOCFILE%"]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": ["%DOCFILE%"]
    },
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ],

  "latex-workshop.latex.magic.args": [
    "-f",
    "-gg",
    "-pv",
    "-synctex=1",
    "-interaction=nonstopmode",
    "-file-line-error",
    "%DOC%"
  ],

  "latex-workshop.view.pdf.viewer": "tab",

  "latex-workshop.latex.autoClean.run": "onBuilt",
